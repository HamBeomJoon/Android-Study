<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.app.ItemData" />

        <variable
            name="viewHolder"
            type="com.example.app.MyAdapter.ViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_character"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:imageUrl="@{item.imageUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{item.name}"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/iv_character"
            app:layout_constraintTop_toTopOf="@id/iv_character" />

        <TextView
            android:id="@+id/tv_character_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:text="@{item.description}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_character"
            app:layout_constraintTop_toBottomOf="@id/tv_character" />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="@{() -> viewHolder.clickPlus(item)}"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/iv_character"
            app:layout_constraintStart_toStartOf="@id/tv_character" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_character"
            app:layout_constraintStart_toEndOf="@id/iv_plus" />

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:onClick="@{() -> viewHolder.clickMinus(item)}"
            android:src="@drawable/ic_minus"
            app:layout_constraintBottom_toBottomOf="@id/iv_character"
            app:layout_constraintStart_toEndOf="@id/tv_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>